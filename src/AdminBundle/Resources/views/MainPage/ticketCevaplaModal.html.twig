<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" aria-hidden="true" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Ticket Cevapla</h4>
        </div>
        <div class="modal-body">

            <div class="form-group">
                <label for="exampleInputEmail1">Başlık :</label><br>
                {{ Ticket.baslik|default('') }}
            </div>


            <div class="form-group">
                <label for="exampleInputEmail1">Metin :</label><br>
                {{ Ticket.metin|default('') }}
            </div>


            <div class="form-group">
                <label for="exampleInputEmail1">Cevapla :</label><br>
                <textarea style="resize: none;" rows="6"  cols="80" id="cevap" placeholder="Metni Giriniz..." form="usrform"></textarea>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" onclick="ticketCevapla({{ Ticket.id }});" class="btn btn-primary">Cevapla</button>
        </div>
    </div>
</div>