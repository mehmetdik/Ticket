{% extends "base.html.twig" %}
{% block body %}


    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Kategori Ekle</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Kategori Ä°smi</label>
                                <input type="text" class="form-control" id="kategori" placeholder="Kategori">
                            </div>



                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <button type="submit" onclick="kategoriEkle()" class="btn btn-primary">Ekle</button>
                        </div>
                    </form>
                </div>



            </div>
            <!--/.col (left) -->
            <!-- right column -->

            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </section>



    <script>
        function kategoriEkle()
        {
            var kategori = $('#kategori').val();


            $.ajax({
                url: "{{ path('ajax_kategoriEkle') }}",
                type: "POST",
                data: 'kategori='+kategori,
                success: function(e){

                    alert(e);

                }
            });
        }
    </script>


{% endblock %}